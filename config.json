{
  "root": "./",
  "dest": "new_dist/",
  "src": "new_src/",
  "gulp": {
    "src": "_gulp/"
  },
  "bump": {
    "src": "package.json",
    "minorConfig": {
      "type": "minor"
    },
    "majorConfig": {
      "type": "major"
    }
  },
  "browserSync": {
    "browserSyncConfig": {
      "server": {
        "baseDir": "./new_dist/"
      }
    }
  },
  "html": {
    "run": true,
    "src": "new_src/html/**/{index,404}",
    "dest": "dist/",
    "watch": "new_src/html/**/*",
    "clean": "**/*.html",
    "renameConfig": {
      "extname": ".html"
    },
    "pugConfig": {
      "pretty": true,
      "basedir": "./new_src/html/"
    },
    "htmllintConfig": ".htmllintrc",
    "htmlminConfig": {
      "collapseWhitespace": true
    },
    "inlineSourcePath": "new_dist"
  },
  "css": {
    "run": true,
    "src": "new_src/scss/",
    "dest": "css/",
    "clean": "css/",
    "styleLintConfig": {
      "reporters": [{
        "formatter": "string",
        "console": true
      }]
    },
    "sassConfig": {
      "includePaths": ["./node_modules/modularscale-sass/stylesheets/", "./node_modules/sass-mq/", "./node_modules/normalize.css/", "./new_src/scss/", "./new_src/scss/components"]
    },
    "autoprefixedConfig": {
      "browsers": ["last 5 versions"],
      "cascade": false
    },
    "renameConfig": {
      "suffix": ".min"
    },
    "sourcemapsConfig": {
      "run": true
    }
  },
  "penthouse": {
    "run": true,
    "src": "style.css",
    "criticalCssConfigs": [{
      "out": "./new_dist/css/style.critical.css",
      "url": "https://threefatarrows.com",
      "width": 1920,
      "height": 1200,
      "keepLargerMediaQueries": true,
      "strict": false,
      "blockJSRequests": false
    }]
  },
  "js": {
    "run": true,
    "src": "new_src/js/",
    "dest": "js/",
    "clean": "js/",
    "eslintConfig": {
      "configFile": "./.eslintrc.json",
      "fix": true,
      "quiet": true
    },
    "includeConfig": {
      "includePaths": [
        "./node_modules"
      ]
    },
    "babelConfig": {
      "presets": ["env"]
    },
    "standardConfig": {
      "breakOnError": false,
      "showRuleNames": true,
      "standard": {
        "globals": ["requestAnimationFrame", "sessionStorage"]
      }
    },
    "renameConfig": {
      "suffix": ".min"
    },
    "sourcemapsConfig": {
      "run": true
    }
  },
  "gfx": {
    "run": true,
    "src": "new_src/gfx/",
    "dest": "gfx/",
    "clean": "gfx/",
    "gifsicleConfig": {
      "interlaced": true
    },
    "imageminMozjpegConfig": {
      "quality": 90,
      "progressive": true
    },
    "imageminPngquantConfig": {
      "quality": 90
    },
    "svgoConfig": {
      "plugins": [{
          "cleanupAttrs": true
        },
        {
          "removeDoctype": true
        },
        {
          "removeComments": true
        },
        {
          "removeXMLProcInst": true
        },
        {
          "removeMetadata": true
        },
        {
          "removeTitle": false
        },
        {
          "removeDesc": false
        },
        {
          "removeUselessDefs": true
        },
        {
          "removeXMLNS": true
        },
        {
          "removeEditorsNSData": true
        },
        {
          "removeEmptyAttrs": true
        },
        {
          "removeHiddenElems": true
        },
        {
          "removeEditorsNSData": true
        },
        {
          "removeEmptyText": true
        },
        {
          "removeEmptyContainers": true
        },
        {
          "removeViewBox": false
        },
        {
          "cleanupEnableBackground": true
        },
        {
          "convertStyleToAttrs": true
        },
        {
          "convertColors": true
        },
        {
          "convertPathData": true
        },
        {
          "convertTransform": true
        },
        {
          "removeUnknownsAndDefaults": true
        },
        {
          "removeNonInheritableGroupAttrs": true
        },
        {
          "removeUselessStrokeAndFill": true
        },
        {
          "removeUnusedNS": true
        },
        {
          "cleanupIDs": false
        },
        {
          "cleanupNumericValues": true
        },
        {
          "cleanupListOfValues": true
        },
        {
          "moveElemsAttrsToGroup": true
        },
        {
          "moveGroupAttrsToElems": false
        },
        {
          "collapseGroups": true
        },
        {
          "removeRasterImages": true
        },
        {
          "mergePaths": true
        },
        {
          "convertShapeToPath": false
        },
        {
          "sortAttrs": true
        },
        {
          "removeDimensions": true
        },
        {
          "removeAttrs": false
        },
        {
          "removeElementsByAttr": false
        },
        {
          "addClassesToSVGElement": false
        },
        {
          "addAttributesToSVGElement": false
        },
        {
          "removeStyleElement": false
        },
        {
          "removeScriptElement": false
        },
        {
          "removeDimensions": false
        }
      ]
    }
  },
  "fonts": {
    "run": true,
    "src": "new_src/fonts/",
    "dest": "fonts/",
    "clean": "fonts/"
  },
  "favicon": {
    "run": true,
    "src": "new_src/html/partials/favicon.pug",
    "dest": "html/partials",
    "clean": "favicon/",
    "realFaviconConfig": {
      "masterPicture": "./new_src/gfx/svg/three-fat-arrows.svg",
      "dest": "./new_dist/favicon/",
      "iconsPath": "/favicon/",
      "design": {
        "ios": {
          "pictureAspect": "backgroundAndMargin",
          "backgroundColor": "#1ebada",
          "margin": "18%",
          "assets": {
            "ios6AndPriorIcons": true,
            "ios7AndLaterIcons": true,
            "precomposedIcons": true,
            "declareOnlyDefaultIcon": true
          },
          "appName": "Three Fat Arrows"
        },
        "desktopBrowser": {},
        "windows": {
          "pictureAspect": "noChange",
          "backgroundColor": "#1ebada",
          "onConflict": "override",
          "assets": {
            "windows80Ie10Tile": true,
            "windows10Ie11EdgeTiles": {
              "small": true,
              "medium": true,
              "big": true,
              "rectangle": true
            }
          },
          "appName": "Three Fat Arrows"
        },
        "androidChrome": {
          "pictureAspect": "noChange",
          "themeColor": "#1ebada",
          "manifest": {
            "name": "Three Fat Arrows",
            "display": "standalone",
            "orientation": "notSet",
            "onConflict": "override",
            "declared": true
          },
          "assets": {
            "legacyIcon": true,
            "lowResolutionIcons": false
          }
        },
        "safariPinnedTab": {
          "pictureAspect": "blackAndWhite",
          "threshold": 42.5,
          "themeColor": "#1ebada"
        }
      },
      "settings": {
        "compression": 2,
        "scalingAlgorithm": "Cubic",
        "errorOnImageTooSmall": false
      },
      "markupFile": "./faviconData.json"
    }
  },
  "gzip": {
    "run": true,
    "src": "",
    "dest": "",
    "gzipConfig": {}
  },
  "kill": {
    "dev": {
      "run": false
    },
    "docs": {
      "run": false
    },
    "dist": {
      "run": false
    },
    "deploy": {
      "run": true
    },
    "timeout": 20000
  },
  "kss": {
    "run": true,
    "dest": "docs/styleguide/",
    "clean": "docs/styleguide/",
    "kssConfig": {
      "title": "Three Fat Arrows",
      "source": "./new_src/scss/",
      "destination": "./new_dist/docs/styleguide/",
      "css": [
        "/css/style.css",
        "/css/foft.css"
      ],
      "js": [
        "/js/foftFontLoading.js"
      ]
    }
  }
}
